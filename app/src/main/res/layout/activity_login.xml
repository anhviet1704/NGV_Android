<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_login"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_logo_login" />


                    </android.support.constraint.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">


                        <com.ivankocijan.magicviews.views.MagicEditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="38dp"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/bg_stroke_d1ecff_6dp"
                            android:ems="10"
                            android:hint="@string/tv_login_002"
                            android:inputType="phone"
                            android:paddingBottom="16dp"
                            android:paddingEnd="16dp"
                            android:paddingStart="16dp"
                            android:paddingTop="16dp"
                            android:singleLine="true"
                            android:textColor="#223254"
                            android:textColorHint="#9098A9"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rd_child"
                            app:typeFace="HelveticaNeue_Light.otf" />


                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="38dp"
                            android:layout_marginStart="38dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/bg_stroke_d1ecff_6dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/et_username">

                            <com.ivankocijan.magicviews.views.MagicEditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:hint="@string/tv_login_003"
                                android:inputType="textPassword"
                                android:paddingBottom="16dp"
                                android:paddingEnd="96dp"
                                android:paddingStart="16dp"
                                android:paddingTop="16dp"
                                android:singleLine="true"
                                android:textColor="#223254"
                                android:textColorHint="#9098A9"
                                android:textSize="13sp"
                                app:typeFace="HelveticaNeue_Light.otf" />

                            <ImageView
                                android:id="@+id/iv_login"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/box_blue_haft_6dp"
                                android:padding="19dp"
                                android:src="@drawable/ic_arowlogin"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <ImageView
                                android:id="@+id/iv_show_pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/iv_login"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/mask" />

                        </android.support.constraint.ConstraintLayout>

                        <com.ivankocijan.magicviews.views.MagicTextView
                            android:id="@+id/tv__forgot_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="38dp"
                            android:drawablePadding="11dp"
                            android:drawableStart="@drawable/ic_key"
                            android:singleLine="true"
                            android:text="@string/tv_login_004"
                            android:textColor="#223254"
                            android:textSize="13sp"
                            app:typeFace="HelveticaNeue_Light.otf" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:paddingBottom="21dp"
                android:paddingTop="20dp">


                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_login_001"
                    android:textColor="#1C89FF"
                    android:textSize="16sp"
                    app:typeFace="HelveticaNeue_Light.otf" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


</layout>