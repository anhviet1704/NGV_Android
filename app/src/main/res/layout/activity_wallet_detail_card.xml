<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8FAFF"
        android:orientation="vertical">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_roundRect_borderColor="#73809B"
            app:shape_roundRect_borderWidth="0dp"
            app:shape_roundRect_bottomLeftRadius="0dp"
            app:shape_roundRect_bottomRightRadius="0dp"
            app:shape_roundRect_topLeftRadius="0dp"
            app:shape_roundRect_topRightRadius="0dp">

            <com.ivankocijan.magicviews.views.MagicTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8FAFF"
                android:gravity="center"
                android:text="@string/tv_wallet_012"
                android:textColor="#1C2D51"
                android:textSize="18sp"
                app:typeFace="HelveticaNeue_Regular.otf" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:padding="10dp"
                android:src="@drawable/ic_back" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#EDEDED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_toolbar" />

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/view_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:shape_roundRect_borderColor="#DFE5ED"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="6dp"
            app:shape_roundRect_bottomRightRadius="6dp"
            app:shape_roundRect_topLeftRadius="6dp"
            app:shape_roundRect_topRightRadius="6dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_visa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/magicTextView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/tv_wallet_037"
                    android:textColor="#98A2B0"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_icon"
                    app:typeFace="HelveticaNeue_Regular.otf" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_type_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="#223254"
                    android:textSize="13sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/magicTextView13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:typeFace="HelveticaNeue_Regular.otf" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/magicTextView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/tv_wallet_038"
                    android:textColor="#98A2B0"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/magicTextView13"
                    app:layout_constraintTop_toBottomOf="@+id/magicTextView13"
                    app:typeFace="HelveticaNeue_Regular.otf" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_number_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="#223254"
                    android:textSize="13sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/magicTextView15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:typeFace="HelveticaNeue_Regular.otf" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_delete_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/tv_wallet_039"
                    android:textColor="#F25F78"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_number_card"
                    app:layout_constraintTop_toBottomOf="@+id/tv_number_card"
                    app:typeFace="HelveticaNeue_Regular.otf" />


            </android.support.constraint.ConstraintLayout>


        </com.github.florent37.shapeofview.shapes.RoundRectView>


    </android.support.constraint.ConstraintLayout>
</layout>