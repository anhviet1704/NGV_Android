<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_roundRect_borderColor="#73809B"
            app:shape_roundRect_borderWidth="0dp"
            app:shape_roundRect_bottomLeftRadius="0dp"
            app:shape_roundRect_bottomRightRadius="0dp"
            app:shape_roundRect_topLeftRadius="0dp"
            app:shape_roundRect_topRightRadius="0dp">

            <com.ivankocijan.magicviews.views.MagicTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F8F8"
                android:gravity="center"
                android:text="@string/tv_register_016"
                android:textColor="#1C2D51"
                android:textSize="16sp"
                app:typeFace="HelveticaNeue_Regular.otf" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="13dp"
                android:padding="10dp"
                android:src="@drawable/ic_back" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <com.ivankocijan.magicviews.views.MagicTextView
            android:id="@+id/magicTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_toolbar"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/tv_register_027"
            android:textColor="#223254"
            android:textSize="24sp"
            app:typeFace="HelveticaNeue_Medium.otf" />

        <com.ivankocijan.magicviews.views.MagicEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/magicTextView2"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/bg_stroke_d1ecff_6dp"
            android:ems="10"
            android:hint="@string/tv_register_006"
            android:inputType="phone"
            android:paddingBottom="16dp"
            android:paddingEnd="96dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:textColor="#223254"
            android:textColorHint="#9098A9"
            android:textSize="13sp"
            app:typeFace="HelveticaNeue_Light.otf" />

        <com.ivankocijan.magicviews.views.MagicTextView
            android:id="@+id/tv_have_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/et_password"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/tv_register_024"
            android:textColor="#1C89FF"
            android:textSize="16sp"
            android:visibility="gone"
            app:typeFace="HelveticaNeue_Light.otf" />

        <com.ivankocijan.magicviews.views.MagicButton
            android:id="@+id/bt_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/gradient_6dp"
            android:elevation="1dp"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingEnd="118dp"
            android:paddingStart="118dp"
            android:paddingTop="16dp"
            android:text="@string/tv_register_025"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:typeFace="HelveticaNeue_Medium.otf" />

    </RelativeLayout>
</layout>