<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="3dp"
        app:shape_roundRect_borderColor="#73809B"
        app:shape_roundRect_borderWidth="0dp"
        app:shape_roundRect_bottomLeftRadius="0dp"
        app:shape_roundRect_bottomRightRadius="0dp"
        app:shape_roundRect_topLeftRadius="0dp"
        app:shape_roundRect_topRightRadius="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="13dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_close" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="@string/tv_home_004"
                    android:textColor="#1C2D51"
                    android:textSize="18sp"
                    app:typeFace="HelveticaNeue_Medium.otf" />

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:padding="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8FAFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.ivankocijan.magicviews.views.MagicEditText
                    android:id="@+id/et_seach"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13sp"
                    android:layout_weight="1"
                    android:background="@drawable/box_light_blue_full_6dp"
                    android:drawablePadding="12dp"
                    android:drawableStart="@drawable/ic_search"
                    android:hint="@string/tv_home_009"
                    android:paddingBottom="7dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingTop="6dp"
                    android:textColor="#1C2D51"
                    android:textColorHint="#98A2B0"
                    android:textSize="14sp"
                    app:typeFace="HelveticaNeue_Light.otf" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/tv_home_008"
                    android:textColor="#223254"
                    android:textSize="14sp"
                    app:typeFace="HelveticaNeue_Light.otf" />
            </LinearLayout>


        </FrameLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_masterdata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ivankocijan.magicviews.views.MagicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/tv_login_005"
            android:textColor="#1C2D51"
            android:textSize="18sp"
            app:typeFace="HelveticaNeue_Regular.otf" />
    </LinearLayout>

</LinearLayout>

