<?xml version="1.0" encoding="utf-8"?>

<eightbitlab.com.blurview.BlurView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomBlurView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    android:outlineProvider="bounds"
    app:blurOverlayColor="@color/color_blur">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/roundRectView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_close"
            app:shape_roundRect_borderColor="#D2DFE8"
            app:shape_roundRect_borderWidth="0dp"
            app:shape_roundRect_bottomLeftRadius="6dp"
            app:shape_roundRect_bottomRightRadius="6dp"
            app:shape_roundRect_topLeftRadius="6dp"
            app:shape_roundRect_topRightRadius="6dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_job"
                android:orientation="vertical">

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_work_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_toolbar"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:text="6:30 - 15:00"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    app:layout_constraintEnd_toStartOf="@+id/roundRectView"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typeFace="HelveticaNeue_Medium.otf" />

                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:id="@+id/roundRectView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="16dp"
                    android:elevation="1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_work_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_work_time"
                    app:layout_constraintTop_toTopOf="@+id/tv_work_time"
                    app:shape_roundRect_borderColor="#F45F79"
                    app:shape_roundRect_borderWidth="0dp"
                    app:shape_roundRect_bottomLeftRadius="6dp"
                    app:shape_roundRect_bottomRightRadius="6dp"
                    app:shape_roundRect_topLeftRadius="6dp"
                    app:shape_roundRect_topRightRadius="6dp">

                </com.github.florent37.shapeofview.shapes.RoundRectView>

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Hôm nay"
                    android:textColor="#DFE5ED"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_work_time"
                    app:layout_constraintTop_toBottomOf="@+id/tv_work_time"
                    app:typeFace="HelveticaNeue_Light.otf" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_login_small"
                    app:layout_constraintStart_toStartOf="@+id/tv_time"
                    app:layout_constraintTop_toBottomOf="@+id/tv_time" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_job_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:text="Dọn dẹp văn phòng vào buổi sáng và buổi chiều"
                    android:textColor="#DFE5ED"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    app:typeFace="HelveticaNeue_Medium.otf" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_pin"
                    app:layout_constraintStart_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_job_name" />

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/tv_job_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Dọn dẹp văn phòng vào buổi sáng và buổi chiều"
                    android:textColor="#E5F0FF"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_job_name"
                    app:layout_constraintTop_toTopOf="@+id/imageView6"
                    app:layout_constraintVertical_bias="0.0"
                    app:typeFace="HelveticaNeue_Light.otf" />

            </android.support.constraint.ConstraintLayout>
        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <LinearLayout
            android:id="@+id/roundRectView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/roundRectView2">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@+id/view_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundRectView2"
                app:shape_roundRect_borderColor="#84B8FF"
                app:shape_roundRect_borderWidth="0.5dp"
                app:shape_roundRect_bottomLeftRadius="6dp"
                app:shape_roundRect_bottomRightRadius="6dp"
                app:shape_roundRect_topLeftRadius="6dp"
                app:shape_roundRect_topRightRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DBE7F6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="17dp">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:id="@+id/tv_price_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="300.000/h"
                        android:textColor="#223254"
                        android:textSize="20sp"
                        app:typeFace="HelveticaNeue_Medium.otf" />

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#DBE7F6"
                        android:text="@string/tv_user_004"
                        android:textColor="#98A2B0"
                        android:textSize="14sp"
                        app:typeFace="HelveticaNeue_Light.otf" />

                </LinearLayout>
            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toTopOf="@+id/view_close"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundRectView2"
                app:shape_roundRect_borderColor="#84B8FF"
                app:shape_roundRect_borderWidth="0.5dp"
                app:shape_roundRect_bottomLeftRadius="6dp"
                app:shape_roundRect_bottomRightRadius="6dp"
                app:shape_roundRect_topLeftRadius="6dp"
                app:shape_roundRect_topRightRadius="6dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DBE7F6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="17dp">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:id="@+id/tv_time_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="300.000/h"
                        android:textColor="#223254"
                        android:textSize="20sp"
                        app:typeFace="HelveticaNeue_Medium.otf" />

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#DBE7F6"
                        android:text="@string/tv_user_005"
                        android:textColor="#98A2B0"
                        android:textSize="14sp"
                        app:typeFace="HelveticaNeue_Light.otf" />

                </LinearLayout>
            </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>


        <com.ivankocijan.magicviews.views.MagicTextView
            android:id="@+id/magicTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingEnd="8dp"
            android:paddingStart="16dp"
            android:text="@string/tv_user_006"
            android:textColor="#DFE5ED"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roundRectView3"
            app:typeFace="HelveticaNeue_Light.otf" />

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/view_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/magicTextView"
            app:shape_roundRect_borderColor="#FF869B"
            app:shape_roundRect_borderWidth="1dp"
            app:shape_roundRect_bottomLeftRadius="6dp"
            app:shape_roundRect_bottomRightRadius="6dp"
            app:shape_roundRect_topLeftRadius="6dp"
            app:shape_roundRect_topRightRadius="6dp">

            <com.ivankocijan.magicviews.views.MagicEditText
                android:id="@+id/et_sum_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:drawableEnd="@drawable/ic_edit"
                android:drawablePadding="12dp"
                android:hint="@string/tv_user_007"
                android:inputType="textPersonName"
                android:paddingBottom="16dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                android:textColor="#223254"
                android:textColorHint="#939EAC"
                android:textSize="14sp"
                app:typeFace="HelveticaNeue_Regular.otf" />
        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <com.ivankocijan.magicviews.views.MagicButton
            android:id="@+id/bt_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:background="@drawable/gradient_6dp"
            android:elevation="1dp"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingEnd="118dp"
            android:paddingStart="118dp"
            android:paddingTop="16dp"
            android:text="@string/tv_register_029"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_close"
            app:typeFace="HelveticaNeue_Medium.otf" />

    </android.support.constraint.ConstraintLayout>
</eightbitlab.com.blurview.BlurView>